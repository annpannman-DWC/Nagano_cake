<div class="container">
 <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品新規登録</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <div class="error">
        <% if @item.errors.any? %>
          <%= @item.errors.count %>件のエラーがあります
          <ul>
            <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <table>

          <tr>
            <div class="form-group">
              <th><%= f.label :image, "商品画像" %></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :name, "商品名" %></th>
              <td><%= f.text_field :name, class:"form-control", placeholder: "プリン" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :caption, "商品説明" %></th>
              <td><%= f.text_area :caption, class:"form-control", placeholder: "ここに説明文を記述します" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :genre_id, "ジャンル" %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group"></div>
            <th><%= f.label :price, "税抜価格" %></th>
            <td><%= f.text_field :price, class:"form-control", placeholder: "8888" %>円</td>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :is_active, "販売ステータス" %></th>
              <td>
                <%= f.radio_button :is_active, true, checked: true %>
                <%= f.label :is_active_true, "販売中" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active_false, "売り切れ" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="form-action">
              <th></th>
              <td><%= f.submit "新規登録", class:"btn btn-warning", :style=> "color: snow;" %></td>
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>

</div>