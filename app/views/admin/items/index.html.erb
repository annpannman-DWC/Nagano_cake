<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 mb-3 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
    <div class="col-sm-2 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn-circle btn-dark" do %>
        <span>商品追加 <i class="fas fa-plus"></i></span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mt-3 mb-5">
      <table class="table text-center mb-5">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item) do %>
                  <%= item.name %>
                <% end %>
                </td>
              <td><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %></td>
              <td><%= item.category.name %></td>
              <td>
                <% if item.sale_status == true %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-danger">売り切れ</p>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>