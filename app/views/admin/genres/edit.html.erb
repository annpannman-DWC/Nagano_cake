<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 mb-3 offset-sm-1">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
      <p><%= f.label :name, "ジャンル名" %></p>
      <p><%= f.text_field :name, autofocus: true %></p>
      <div class="error">
        <% if @genre.errors.any? %>
          <%= @genre.errors.count %>件のエラーがあります
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <p><%= f.submit "変更を保存", class: "btn btn-warning" %></p>
      <% end %>
    </div>
  </div>
</div>
