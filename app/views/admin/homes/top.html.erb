<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 mb-3 offset-sm-1">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="table-active">購入日時</th>
            <th class="table-active">購入者</th>
            <th class="table-active">注文個数</th>
            <th class="table-active">受注ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id), :style=> "color: #996633;" do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_quantity_count %></td>
              <td><%= order.order_received_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
