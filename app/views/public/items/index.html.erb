<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-sm-12 col-md-10">
      <h2 class="text-center" style="font-family: 'Helvetica Neue', Arial, sans-serif; font-weight: bold; color: #8B4513;">商品一覧 (全 <%= @item.count %>件)</h2>
    </div>
  </div>

  <div class="row mt-3 mb-3 justify-content-center">
    <% @items.each do |item| %>
      <div class="col-xs-10 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card border-0 shadow-sm">
          <%= link_to item_path(item) do %>
            <div class="img-wrap">
              <%= image_tag item.get_image(200, 200), class: "card-img-top img-fluid" %>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title" style="font-family: 'Helvetica Neue', Arial, sans-serif; color: #8B4513;"><%= item.name %></h5>
            <% if item.is_active == true %>
              <p class="card-text text-success"><%= item.price.to_s(:delimited, delimiter: ',') %>円（税抜）</p>
            <% else %>
              <p class="card-text text-danger font-weight-bold">販売停止中</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @items, class: 'custom-pagination' %>
  </div>

  <div class="row mt-5"></div>
  <br><br><br>

</div>

<style>
  .custom-pagination {
  list-style: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-pagination li {
  margin: 0 5px;
}

.custom-pagination a {
  text-decoration: none;
  color: #333;
}

.custom-pagination .current {
  font-weight: bold;
}
</style>