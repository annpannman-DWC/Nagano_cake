<div class="container mt-5 mb-5">
  <div class="row text-center text-xs-center text-sm-left text-md-left">
    <div class="col-xs-12 col-sm-12 col-md-6 mx-auto text-right">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 item-details mx-auto"style="background-color: rgba(255, 240, 245, 0.3); overflow: hidden;">
      <h2 style="color: darkgoldenrod; font-size: 33px;"><strong><%= @item.name %></strong></h2>
      <h4><%= simple_format(@item.caption) %></h4>
      <% if @item.is_active == true %>
        <p class="text-success">販売中</p>
        <h3 style="color: DarkRed; font-size: 20px;">¥ <%= ((@item.price* 1.1).floor).to_s(:delimited, delimiter: ',') %> (税込み)</h3>
        <%= form_with model: @cart_item, url:cart_items_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9],['10個', 10]], placeholder:"個数を選択" %>
          <%= f.submit "カートに入れる", class:"btn btn-success" %>
        <% end %>
      <% else %>
        <p class="text-danger">販売停止中です</p>
      <% end %>
    </div>
  </div>
</div>