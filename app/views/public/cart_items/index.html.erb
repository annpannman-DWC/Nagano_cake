<div class="container">
  <div class="row">
    <div class="col-md-12 d-block mx-auto mt-5 mb-3">
      <div>
        <div class="mb-5 text-center mx-auto">
          <h2><i class="fas fa-shopping-cart"></i> ショッピングカート</h2>
        </div>
        <%= link_to cart_items_destroy_all_path(@cart_items), method: :delete, class: 'btn btn-danger nav-link text-dark' do %>
          <i class="fas fa-cart-arrow-down"></i> カートを空にする
        <% end %>
      </div>
      <table class="table table-hover table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= number_to_currency(cart_item.item.price * 1.1, unit: "円") %></td>
              <td>
                <%= form_for(cart_item, url: cart_item_path(cart_item)) do |c| %>
                  <%= c.number_field :amount, min: 1, max: 999, step: 1 %>
                  <%= c.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= number_to_currency(cart_item.item.price * cart_item.amount * 1.1, unit: "円") %></td>
              <td>
                <%= link_to cart_item_path(cart_item), method: :delete, class: "btn btn-danger" do %>
                  <i class="fas fa-trash"></i> 削除する
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 text-right mt-4">
      <span>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary", data: { "turbolinks" => false } %>
      </span>
    </div>
    <div class="col-md-6 mt-3">
      <table class="table table-bordered">
        <tr>
          <td class="info"><strong>合計金額</strong></td>
          <td><%= number_to_currency(@total_price.floor, unit: "円") %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right mb-4 mt-2">
      <span>
        <%= link_to "情報入力に進む", new_order_path, class: "col-xs-12 btn btn-success"%>
      </span>
    </div>
  </div>
</div>