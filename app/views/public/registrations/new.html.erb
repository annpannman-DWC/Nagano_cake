<div class="container">
 <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @customer do |f| %>
        <table>

          <tr>
            <div class="form-group">
              <th scope="col"><%= f.label :名前 %></th>
              <td>(姓)</td>
              <td><%= f.text_field :first_name %></td>
              <td>(名)</td>
              <td><%= f.text_field :last_name %><td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :フリガナ %></th>
              <td>(セイ)</td>
              <td><%= f.text_field :first_name_kana%></td>
              <td>(メイ)</td>
              <td><%= f.text_field :last_name_kana %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :メールアドレス %></th>
              <td></td>
              <td><%= f.text_field :email %></td>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label "郵便番号(ハイフンなし)" %></th>
              <td></td>
              <td><%= f.text_field :postal_code %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group"></div>
              <th><%= f.label :住所 %></th>
              <td></td>
              <td colspan="2"><%= f.text_field :address %></td>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label "電話番号(ハイフンなし)" %></th>
              <td></td>
              <td><%= f.text_field :phone_number %></td>
            </div>
          </tr>

          <tr>
            <div class="form-action">
              <th><%= f.label "パスワード(６文字以上)" %></th>
              <td></td>
              <td><%= f.password_field :password %></td>
            </div>
          </tr>

          <tr>
            <div>
              <th><%= f.label "パスワード(確認用)" %></th>
              <td></td>
              <td><%= f.password_field :password_confirmation %></td>
            </div>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success btn-block" %></td>
          </tr>
        </table>
      <% end %>
      <div class="pt-3">
        <h2>既に登録済みの方</h2>
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
      </div>
    </div>
  </div>

</div>

