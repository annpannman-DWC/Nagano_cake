<div class="container">
  <div class="col-sm-4 px-sm-0 offset-sm-1 mt-3">
    <span style="background-color: #f2f2f2; font-size: 23px;">注文履歴詳細</span>
  </div>
  <div class="row">
    <div class="col-xs-8">
        <strong>注文情報</strong>
        <table class="table table-bordered table-condensed">
            <tbody>
                <tr>
                    <th class="info">注文日</th>
                    <td class="text-left">
                        <%= @order.created_at.strftime('%Y/%m/%d %H:%M') %>
                    </td>
                </tr>
                <tr>
                    <th class="info">配送先</th>
                    <td class="text-left">
                        <%= @order.postal_code %><br>
                        <%= @order.address %><br>
                        <%= @order.address_name %>
                    </td>
                </tr>
                <tr>
                    <th class="info">支払方法</th>
                    <td class="text-left">
                        <%= @order.payment_method %>
                    </td>
                </tr>
                <tr>
                    <th class="info">ステータス</th>
                    <td class="text-left">
                        <% case @order.order_received_status %>
                            <% when 'shipped' %>
                                発送済み
                            <% when 'received' %>
                                受注済み
                            <% when 'processing' %>
                                処理中
                            <% when 'delivered' %>
                                配達済み
                            <% else %>
                                未定義
                        <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-xs-3 billing">
        <strong>請求情報</strong>
        <table class="table table-bordered table-condensed">
            <tr>
                <th class="info">配送料</th>
                <td class="col-xs-5">
                    <%= @order.shopping_cost.to_s(:delimited, delimiter: ',') %>円
                </td>
            </tr>
            <tr>
                <th class="info">商品合計</th>
                <td class="col-xs-5">
                    <%= (@order.total_price - @order.shopping_cost).to_s(:delimited, delimiter: ',') %>円
                </td>
            </tr>
            <tr>
                <th class="info">ご請求金額</th>
                <td class="col-xs-5">
                    <%= @order.total_price.to_s(:delimited, delimiter: ',') %>円
                </td>
            </tr>
        </table>
    </div>
    
    <div class="col-xs-12">
        <strong>注文内容</strong>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr class="info">
                    <th>商品</th>
                    <th>単価(税込)</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
                <% @order_details.each do |order_detail| %>
                <tr>
                    <td><%= order_detail.item.name %></td>
                    <td><%= (order_detail.item.price * 1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
                    <td><%= order_detail.quantity %></td>
                    <td><%= ((order_detail.item.price * 1.1).floor * (order_detail.quantity)).to_s(:delimited, delimiter: ',') %>円</td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="row mt-5"></div>
    <br><br><br><br><br>
    
  </div>
</div>