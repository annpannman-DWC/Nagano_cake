<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 mb-3 offset-sm-1">
      <h3>注文情報入力</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
    <%= form_with model: @order, url:orders_path, method: :post,local: true do |f| %>
      <p><i class="fas fa-yen-sign"></i>支払い方法</p>
        <%= f.radio_button :payment_method, credit_card: 0 %>
          <%= f.label :payment_method, "クレジットカード" %>
        <%= f.radio_button :payment_method, transfer: 1 %>
          <%= f.label :payment_method, "銀行振込" %>
      <p>お届け先</p>
        <%= f.radio_button :address_option, 0 %>
          <%= f.label :address, "ご自身の住所" %><br>
          <table>
            <tr>
              <th>郵便番号</th>
              <td>〒<%= current_customer.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= current_customer.address %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td><%= current_customer.last_name %><%= current_customer.first_name %></td>
            </tr>
          </table>
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :address, "登録済み住所から選択" %>
        <%#= f.label :address_option, "登録済み住所から選択", value: 1, class: "radio-label label-size" %><br>
        <%= f.collection_select :address_id, current_customer.addresses, :id, :address_display %>
          <%#= f.collection_select :delivery_id, Delivery.all, :id, :postal_code, :address, :address_name, options = { include_light: true, selected: <id> } %>

        <%= f.radio_button :address_option, 2 %>
          <%= f.label :address, "新しいお届け先" %>
          <table>
            <tr>
              <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <th><%= f.label :address, "住所"%></th>
              <td><%=f.text_field :address %></td>
            </tr>
            <tr>
              <th><%= f.label :address_name, "宛名"%></th>
              <td><%=f.text_field :address_name %></td>
            </tr>
          </table>
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>