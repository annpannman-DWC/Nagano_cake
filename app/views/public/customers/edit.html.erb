<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <span style="background-color: #f2f2f2; font-size: 23px;">会員情報編集</span>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
        <table>
          <tr>
            <div class="form-group">
              <th scope="col"><%= f.label :氏名 %></th>
              <td></td>
              <td><%= f.text_field :first_name %></td>
              <td></td>
              <td><%= f.text_field :last_name %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :フリガナ %></th>
              <td></td>
              <td><%= f.text_field :first_name_kana %></td>
              <td></td>
              <td><%= f.text_field :last_name_kana %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :メールアドレス %></th>
              <td></td>
              <td><%= f.text_field :email, size: "20", autofocus: true, placeholder: "sample@example.com" %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label "郵便番号(ハイフンなし)" %></th>
              <td></td>
              <td><%= f.text_field :postal_code %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label :住所 %></th>
              <td></td>
              <td colspan="2"><%= f.text_field :address %></td>
            </div>
          </tr>

          <tr>
            <div class="form-group">
              <th><%= f.label "電話番号(ハイフンなし)" %></th>
              <td></td>
              <td><%= f.text_field :phone_number %></td>
            </div>
          </tr>

          <tr>
            <div class="form-action">
              <th><%= f.label "パスワード(６文字以上)" %></th>
              <td></td>
              <td><%= f.password_field :password %></td>
            </div>
          </tr>

          <tr>
            <div>
              <th><%= f.label "パスワード(確認用)" %></th>
              <td></td>
              <td><%= f.password_field :password_confirmation %></td>
            </div>
          </tr>

          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit "編集内容を保存", class: "btn btn-success btn-block" %></td>
            <td></td>
            <td></td>
            <td><%= link_to "退会する", "#", class: "btn btn-danger"%></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>