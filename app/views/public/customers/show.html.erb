<div class="container">
  <div class="row my-3">
    <div class="col-sm-4 px-sm-0 offset-sm-3 mt-3">
       <span style="background-color: #f2f2f2; font-size: 25px;">マイページ</span>
    </div>
  </div>

  <div class="row">

    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
          <th class="table-info">お名前</th>
          <td><%= @customer.first_name + @customer.last_name %></td>
        </tr>
        <tr>
          <th class="table-info">フリガナ</th>
          <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th class="table-info">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-info">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-info">電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class="table-info">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1 text-left">
      <h4>配送先</h4>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", deliveries_path, data: { "turbolinks" => false }, class: "btn btn-primary mb-2" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1 text-left">
      <h4>注文履歴</h4>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary mb-2" %>
    </div>
  </div>

  <div class="row mt-5"></div>
  <br><br>
</div>