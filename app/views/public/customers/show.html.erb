<div class="container">
  <div class="row my-3">
    <div class="col-sm-4 px-sm-0 offset-sm-3 mt-3">
       <span style="font-size: 25px;">マイページ</span>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h4 class="d-inline">登録情報</h4>
      <div class="d-inline">
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-warning mb-2", style: "color: whitesmoke;" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
          <th>お名前</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1 text-left">
      <h4>配送先</h4>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", deliveries_path, data: { "turbolinks" => false }, class: "btn btn-warning mb-2", style: "color: snow;" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1 text-left">
      <h4>注文履歴</h4>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-warning mb-2", style: "color: snow;" %>
    </div>
  </div>

  <div class="row mt-5"></div>
  <br><br>
</div>