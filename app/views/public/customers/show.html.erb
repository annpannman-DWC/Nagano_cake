<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 mx-auto text-center">
      <h2>マイページ</h2>
    </div>
  </div>
</div>
  <div class="row">
    <div class="col-sm3 px-sm-0 offset-sm-4 text-right">
      <h4>登録情報</h4>
    </div>
    <div class="col-sm-3 px-sm-0 mx-auto">
      <%= link_to "編集する", admin_customers_path, class:"btn btn-success px-4 mb-2" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1 mx-auto">
      <table class="table table-bordered">
        <tr>
          <th class="table-info">お名前</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-info">フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-info">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-info">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-info">電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class="table-info">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-sm3 px-sm-0 offset-sm-4 text-right mr-4"><h4>配送先</h4></div>
    <div class="col-sm-3 px-sm-0 mx-auto">
      <%= link_to "一覧を見る", deliveries_path, data: {"turbolinks" => false}, class:"btn btn-primary mb-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm3 px-sm-0 offset-sm-4 text-right"><h4>注文履歴</h4></div>
    <div class="col-sm-3 px-sm-0 mx-auto">
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary mb-2" %>
    </div>
  </div>