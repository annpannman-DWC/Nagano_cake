<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCakeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
          <a class="navbar_brand　nav-link text-warning h2" href="/">LOGO</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <li class="m-2">
                <%= link_to customers_mypage_path do %>
                  <button type="button" class="btn btn-outline-dark">マイページ</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to items_path do %>
                  <button type="button" class="btn btn-outline-dark">商品一覧</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to cart_items_path do %>
                  <button type="button" class="btn btn-outline-dark">カート</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                  <button type="button" class="btn btn-outline-dark">ログアウト</button>
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="m-2">
                <%= link_to admin_items_path do %>
                  <button type="button" class="btn btn-outline-dark">商品一覧</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to admin_customers_path do %>
                  <button type="button" class="btn btn-outline-dark">会員一覧</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to admin_path do %>
                  <button type="button" class="btn btn-outline-dark">注文履歴一覧</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to admin_genres_path do %>
                  <button type="button" class="btn btn-outline-dark">ジャンル一覧</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <button type="button" class="btn btn-outline-dark">ログアウト</button>
                <% end %>
              </li>
            <% else %>
              <li class="m-2">
                <%= link_to about_path do %>
                  <button type="button" class="btn btn-outline-dark">About</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to items_path do %>
                  <button type="button" class="btn btn-outline-dark">商品一覧</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to new_customer_registration_path do %>
                  <button type="button" class="btn btn-outline-dark">新規登録</button>
                <% end %>
              </li>
              <li class="m-2">
                <%= link_to new_customer_session_path do %>
                  <button type="button" class="btn btn-outline-dark">ログイン</button>
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p id="notice"><%= notice %></p>
      <%= yield %>
      <%= render 'layouts/footer' %>
    </main>
  </body>
</html>