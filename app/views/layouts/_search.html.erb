<div class="search">
  <div class="container">
    <div class="row">
      <div class="col">
        <%= form_with url: search_path, local: true, method: :get, html: { class: "search-form" } do |f| %>
          <div class="input-group">
            <%= f.text_field :word, class: "form-control", placeholder: "キーワードを入力" %>
            <div class="input-group-append">
              <%= f.select :range, options_for_select([["Genre"],["Item"]]), { class: "form-control" } %>
            </div>
            <div class="input-group-append">
              <%= f.select :search, options_for_select([["完全一致","perfect"],["前方一致","forward"],["後方一致","backward"],["部分一致","partial"]]), { class: "form-control" } %>
            </div>
            <div class="input-group-append">
              <%= f.submit '検索', class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>